{
  "manifest_version": 3,
  "name": "dark pattern detector",
  "version": "1.0",
  "description": "To detect dark patterns on X.",
  "permissions": ["storage", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://x.com/home?lang=en"],
      "js": ["content-scripts/autoplay.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open"
  },
  "background": {
    "service_worker": "background.js"
  }
}
