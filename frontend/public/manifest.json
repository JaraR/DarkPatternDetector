{
  "manifest_version": 3,
  "name": "Dark Pattern Detection on X",
  "version": "0.1.0",
  "description": "To detect dark patterns on X.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://bsky.app/*"],
      "js": ["content-scripts/autoplay.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logo3.png",
    "48": "icons/logo3.png",
    "128": "icons/logo3.png"
  }
}
